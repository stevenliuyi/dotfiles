# basic shortcuts
alias ls "ls --color"
alias ll "ls -l --color"
alias la "ls -a --color"
alias .. "cd .."
alias ... "cd ../.."
alias df "df -H"

# vim
alias vi "vim"

# g++
alias g++ "g++ -std c++14 -Wall -g -O2"

# tmux
alias tmux "tmux -2"

# trash
if !( `where trash` == "" ) then
    alias rm trash
endif

# mpi
if !( `where mpirun` == "") then
    alias mpi4 "mpirun -np 4"
    alias mpi8 "mpirun -np 8"
    alias mpi16 "mpirun -np 16"
    alias mpi32 "mpirun -np 32"
    alias mpi64 "mpirun -np 64"
endif
